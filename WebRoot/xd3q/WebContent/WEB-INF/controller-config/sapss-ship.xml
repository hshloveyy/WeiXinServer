<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="order" value="4" />
		<!-- 是否登录拦截器，针对每个请求进行过滤 -->
		<property name="interceptors">
			<list>
				<bean
					class="com.infolion.platform.console.sys.LogonStateInterceptor" />
			</list>
		</property>
		<property name="mappings">
			<props>
				<prop key="/shipController.spr">shipController</prop>
				<prop key="/shipNotifyController.spr">shipNotifyController</prop>
				<prop key="/pledgeShipController.spr">pledgeShipController</prop>
			</props>
		</property>
	</bean>
	
	<!--出库单控制器-->
	<bean id="shipController"         
		class="com.infolion.sapss.ship.web.ShipController"
		parent="baseMultiActionControllerXD" />
	<bean id="pledgeShipController"         
		class="com.infolion.sapss.pledge.web.PledgeShipController"
		parent="baseMultiActionControllerXD" />
		
	<!--出口货物通知单控制器-->	
    <bean id="shipNotifyController"         
		class="com.infolion.sapss.ship.web.ShipNotifyController"
		parent="baseMultiActionControllerXD" />
		
</beans>