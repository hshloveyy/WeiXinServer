<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="order" value="4" />
		<!-- 是否登录拦截器，针对每个请求进行过滤 -->
		<property name="interceptors">
			<list>
				<bean
					class="com.infolion.platform.console.sys.LogonStateInterceptor" />
			</list>
		</property>
		<property name="mappings">
			<props>
				<prop key="/salesReturnController.spr">salesReturnController</prop>
				<prop key="/scrappedController.spr">scrappedController</prop>
				<prop key="/jdPurchaseController.spr">jdPurchaseController</prop>
				<prop key="/investmentController.spr">investmentController</prop>
				<prop key="/storageProtocolController.spr">storageProtocolController</prop>
			</props>
		</property>
	</bean>
	
	<!--销售退票控制器-->
	<bean id="salesReturnController"         
		class="com.infolion.sapss.salesReturn.web.SalesReturnController"
		parent="baseMultiActionControllerXD" />
	<bean id="scrappedController"         
		class="com.infolion.sapss.scrapped.web.ScrappedController"
		parent="baseMultiActionControllerXD" />
	<bean id="jdPurchaseController"         
		class="com.infolion.sapss.jdPurchase.web.JdPurchaseController"
		parent="baseMultiActionControllerXD" />
	<bean id="investmentController"         
		class="com.infolion.sapss.investment.web.InvestmentController"
		parent="baseMultiActionControllerXD" />
	<bean id="storageProtocolController"         
		class="com.infolion.sapss.storageProtocol.web.StorageProtocolController"
		parent="baseMultiActionControllerXD" />
		
		
</beans>