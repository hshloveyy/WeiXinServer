<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="order" value="4" />
		<!-- 是否登录拦截器，针对每个请求进行过滤 -->
		<property name="interceptors">
			<list>
				<bean
					class="com.infolion.platform.console.sys.LogonStateInterceptor" />
			</list>
		</property>
		<property name="mappings">
			<props>
				<prop key="/receiptMoneyController.spr">receiptMoneyController</prop>
				<prop key="/receiptGoodsController.spr">receiptGoodsController</prop>
				<prop key="/paymentMoneyController.spr">paymentMoneyController</prop>
			</props>
		</property>
	</bean>
	
	<!--收款信息控制器-->
	<bean id="receiptMoneyController"         
		class="com.infolion.sapss.receiptLog.web.ReceiptMoneyController"
		parent="baseMultiActionControllerXD" />
		
	<!--收货信息控制器-->	
    <bean id="receiptGoodsController"         
		class="com.infolion.sapss.receiptLog.web.ReceiptGoodsController"
		parent="baseMultiActionControllerXD" />
	<!--付款信息控制器-->	
    <bean id="paymentMoneyController"         
		class="com.infolion.sapss.receiptLog.web.PaymentMoneyController"
		parent="baseMultiActionControllerXD" />
		
</beans>