<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="order" value="4" />
		<!-- 是否登录拦截器，针对每个请求进行过滤 -->
		<property name="interceptors">
			<list>
				<bean
					class="com.infolion.platform.console.sys.LogonStateInterceptor" />
			</list>
		</property>
		<property name="mappings">
			<props>
				<prop key="/contractController.spr">contractController</prop>
				<prop key="/saleChangeController.spr">saleChangeController</prop>
				<prop key="/purchaseChangeController.spr">purchaseChangeController</prop>
			</props>
		</property>
	</bean>
	<!--sample控制器-->
	<bean id="contractController"
		class="com.infolion.sapss.contract.web.ContractController"
		parent="baseMultiActionControllerXD" />
	<bean id="saleChangeController"
		class="com.infolion.sapss.contract.web.SaleChangeController"
		parent="baseMultiActionControllerXD" />
	<bean id="purchaseChangeController"
		class="com.infolion.sapss.contract.web.PurchaseChangeController"
		parent="baseMultiActionControllerXD" />
</beans>