<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="order" value="4" />
		<!-- 是否登录拦截器，针对每个请求进行过滤 -->
		<property name="interceptors">
			<list>
				<bean
					class="com.infolion.platform.console.sys.LogonStateInterceptor" />
			</list>
		</property>
		<property name="mappings">
			<props>
				<prop key="/creditController.spr">
					creditController
				</prop>
				<prop key="/loanCNYController.spr">
					loanCNYController
				</prop>
				<prop key="/loanForeignController.spr">
					loanForeignController
				</prop>
				<prop key="/fundsRequireQueryController.spr">
					fundsRequireQueryController
				</prop>
			</props>
		</property>
	</bean>
	<!--银行承兑汇票+国内信用证-->
	<bean id="creditController"
		class="com.infolion.sapss.capitalRequirement.web.CreditController"
		parent="baseMultiActionControllerXD" />
	<!--人民币短期借款+人民币长期借款-->
	<bean id="loanCNYController"
		class="com.infolion.sapss.capitalRequirement.web.LoanCNYController"
		parent="baseMultiActionControllerXD" />
	<!--外币短期借款-->
	<bean id="loanForeignController"
		class="com.infolion.sapss.capitalRequirement.web.LoanForeignController"
		parent="baseMultiActionControllerXD" />
	<!--资金需求查询-->
	<bean id="fundsRequireQueryController"
		class="com.infolion.sapss.capitalRequirement.web.FundsRequireQueryController"
		parent="baseMultiActionControllerXD" />
</beans>