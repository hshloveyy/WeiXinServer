<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean class="com.infolion.platform.dpframework.core.web.BDPSimpleUrlHandlerMapping">
		<property name="order" value="3" />
		<!-- 是否登录拦截器，针对每个请求进行过滤 -->
		<!-- property name="interceptors">
			<list>
				<bean
					class="com.infolion.platform.basicApp.authManage.MethodAuthenticationInterceptor" />
			</list>        
		</property -->
		<property name="mappings">
			<props>
				<prop key="/queryConditionController.spr">queryConditionController</prop>
				<prop key="/authManage/userUrlLoginController.spr">userUrlLoginController</prop>
			</props>
		</property>
	</bean>
	<!--sample控制器-->
	
	<bean id="queryConditionController"
		class="com.infolion.platform.dpframework.uicomponent.queryCondition.web.QueryConditionController"     
		parent="baseMultiActionController" />
	<!-- URL登录控制器 -->
	<bean id="userUrlLoginController"
		class="com.infolion.platform.basicApp.authManage.web.UserUrlLoginController"
		parent="baseMultiActionController" />
</beans>