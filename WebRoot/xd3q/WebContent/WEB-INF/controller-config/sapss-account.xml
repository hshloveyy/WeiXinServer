<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="order" value="4" />
		<!-- 是否登录拦截器，针对每个请求进行过滤 -->
		<property name="interceptors">
			<list>
				<bean
					class="com.infolion.platform.console.sys.LogonStateInterceptor" />
			</list>
		</property>
		<property name="mappings">
			<props>
				<prop key="/subjectController.spr">
					subjectController
				</prop>
				<prop key="/accountController.spr">
					accountController
				</prop>
				<prop key="/innerTransferController.spr">
					innerTransferController
				</prop>
				<prop key="/profitCenterController.spr">
					profitCenterController
				</prop>
				<prop key="/costCenterController.spr">
					costCenterController
				</prop>
			</props>
		</property>
	</bean>
	<!--会计科目-->
	<bean id="subjectController"
		class="com.infolion.sapss.account.web.SubjectController"
		parent="baseMultiActionControllerXD" />
	<!--银行主数据-->
	<bean id="accountController"
		class="com.infolion.sapss.account.web.AccountController"
		parent="baseMultiActionControllerXD" />
	<!--内部划拨-->
	<bean id="innerTransferController"
		class="com.infolion.sapss.account.web.InnerTransferController"
		parent="baseMultiActionControllerXD" />
	<!--利润中心-->
	<bean id="profitCenterController"
		class="com.infolion.sapss.account.web.ProfitCenterController"
		parent="baseMultiActionControllerXD" />
	<!--成本中心-->
	<bean id="costCenterController"
		class="com.infolion.sapss.account.web.CostCenterController"
		parent="baseMultiActionControllerXD" />
</beans>