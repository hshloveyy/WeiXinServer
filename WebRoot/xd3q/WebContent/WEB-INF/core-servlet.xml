<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:bdp="http://www.infolion.com.cn/schema/bdp"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd http://www.infolion.com.cn/schema/bdp http://www.infolion.com.cn/schema/bdp/bdpWeb-1.0.xsd">
	<context:annotation-config />
	<bdp:controller-autoload-scan base-package="com.infolion"/>
	<!-- 基础配置 -->
	<import resource="controller-config/infolion-core.xml" />
	<!-- 示例配置 -->
	<import resource="controller-config/infolion-sample.xml" />
	<!-- 基础应用配置 -->
	<import resource="controller-config/infolion-baseApp.xml" />
	<!-- 控制台配置 -->
	<import resource="controller-config/infolion-console.xml" />
	<!-- 合同配置 -->
	<import resource="controller-config/sapss-contract.xml" />
	<!-- 立项配置 -->
	<import resource="controller-config/sapss-project.xml" />
	<!-- 主数据查询配置 -->	
	<import resource="controller-config/sapss-query.xml" />
	<!-- 信用证配置 -->	
	<import resource="controller-config/sapss-credit.xml" />
	<!-- 发货管理 -->	
	<import resource="controller-config/sapss-ship.xml" />
	<!-- 收货管理 -->	
	<import resource="controller-config/sapss-receipts.xml" />
	<!-- 付款管理 -->	
	<import resource="controller-config/sapss-payment.xml" />
	<!-- 出口信息管理 -->	
	<import resource="controller-config/sapss-export.xml" />
	<!-- 主数据信息管理 -->	
	<import resource="controller-config/sapss-maindata.xml" />
	<!-- 销售退货管理 -->	
	<import resource="controller-config/sapss-salesReturn.xml" />	
	<!-- 财务主数据管理 -->	
	<import resource="controller-config/sapss-account.xml" />
	<!-- 收货、收款信息管理 -->	
	<import resource="controller-config/sapss-receiptLog.xml" />
	<import resource="controller-config/sapss-common.xml" />
	<!-- 资金需求管理 -->	
	<import resource="controller-config/sapss-capitalRequirement.xml" />
    <!-- 贸易监控 --> 
    <import resource="controller-config/xdss3-tradeMonitoring.xml" />
</beans>