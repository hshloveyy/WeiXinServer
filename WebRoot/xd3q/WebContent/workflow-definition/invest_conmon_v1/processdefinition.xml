<?xml version="1.0" encoding="UTF-8"?>

<process-definition  xmlns=""  name="invest_conmon_v1">


	<start-state name="提交申请">
		<transition to="股份投资部主办审核"></transition>
	</start-state>


	<task-node name="股份投资部主办审核">
	    <task name="股份投资部主办审核"></task>
		<transition to="部门判断" name="退回修改"></transition>
		<transition to="更新为审批不通过" name="作废申请"></transition>
		<transition to="股份投资部经理审核" name="提交投资部经理审核"></transition>
	</task-node>

	<task-node name="修改申请内容">
	    <task name="修改申请内容"></task>
		<transition to="股份投资部主办审核" name="提交股份公司投资部审核"></transition>
		<transition to="更新为审批不通过" name="作废该申请"></transition>
	</task-node>

	<task-node name="股份公司分管领导审批">
	   <task name="股份公司分管领导审批"></task>
		<transition to="股份公司总经理审批" name="提交股份公司总经理审核"></transition>
		<transition to="股份投资部主办审核" name="退回股份投资部审核"></transition>
		<transition to="更新为审批不通过" name="不批准"></transition>
	</task-node>

	<task-node name="股份公司总经理审批">
	    <task name="股份公司总经理审批"></task>
		<transition to="股份公司董事长审批" name="提交股份公司董事长审批"></transition>
		<transition to="股份投资部主办审核" name="退回股份投资部审核"></transition>
		<transition to="更新为审批不通过" name="不批准"></transition>
	</task-node>

	<task-node name="股份公司董事长审批">
	    <task name="股份公司董事长审批"></task>
	    <transition to="更新为审批通过" name="批准"></transition>
		<transition to="股份投资部主办审核" name="退回股份公司投资部审核"></transition>
		<transition to="更新为审批不通过" name="不批准"></transition>
	</task-node>

	<node name="更新为审批通过">
		<action class="com.infolion.sapss.workflow.investment.InvestmentSuccessActionHandler"></action>
		<transition to="结束（通过）"></transition>
	</node>

	<node name="更新为审批不通过">
	 	<action class="com.infolion.sapss.workflow.investment.InvestmentFailureActionHandler"></action>
		<transition to="结束（不通过）"></transition>
	</node>

	<decision name="部门判断">
		<handler config-type="bean" class="com.infolion.sapss.workflow.investment.DeptDecisionHandler"></handler>
		<transition to="修改申请内容" name="非投资部"></transition>
		<transition to="股份投资部主办审核" name="投资部"></transition>
	</decision>

	<task-node name="股份投资部经理审核">
		<task name="股份投资部经理审核"></task>
		<transition to="股份公司分管领导审批" name="提交股份公司分管领导审批"></transition>
		<transition to="股份投资部主办审核" name="退回投资部主办审核"></transition>
	</task-node>


	<end-state name="结束（通过）"></end-state>

	<end-state name="结束（不通过）"></end-state>


</process-definition>