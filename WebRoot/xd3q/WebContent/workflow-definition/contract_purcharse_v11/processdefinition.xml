<?xml version="1.0" encoding="UTF-8"?>

<process-definition  xmlns=""  name="contract_purcharse_v11">


	<start-state name="采购合同申请">
		<transition to="部门确认" name="提交部门经理"></transition>
	</start-state>


	<task-node name="部门确认">
		<task name="部门确认"></task>
		<transition to="关联交易判断" name="确认提交"></transition>
		<transition to="写入SAP订单2" name="写入SAP订单  "></transition>
		<transition to="合同信息修改" name="退回修改"></transition>
	</task-node>

	<task-node name="信达安总经理审核">
		<task name="信达安总经理审核"></task>
		<transition to="金额判断" name="确认"></transition>
		<transition to="合同信息修改" name="退回业务修改"></transition>
	</task-node>

	<task-node name="信达安贸管部审核">
		<task name="信达安贸管部审核"></task>
		<transition to="新加坡信达安副总审核" name="确认"></transition>
		<transition to="合同信息修改" name="退回业务修改"></transition>
	</task-node>

	<task-node name="合同信息修改">
		<task name="合同信息修改"></task>
		<transition to="部门确认" name="提交部门经理"></transition>
		<transition to="更新订单状态为不通过" name="不提交"></transition>
	</task-node>

	<decision name="判断是否产生写入错误">
		<handler config-type="bean" class="com.infolion.sapss.workflow.decision.WriteSapResultDecisionHandler"></handler>
		<transition to="更新订单状态" name="生成SAP订单成功">
		</transition>
		<transition to="信息中心处理错误" name="产生错误">
		</transition>
	</decision>

	<task-node name="信息中心处理错误">
		<task name="信息中心处理错误"></task>
		<transition to="更新订单状态" name="错误解决，SAP订单已生成成功"></transition>
	</task-node>

	<node name="写入SAP订单1">
		<action class="com.infolion.sapss.workflow.purchase.WriteSapOrderActionHandler"></action>
		<transition to="判断是否产生写入错误"></transition>
	</node>

	<node name="更新订单状态">
		<action class="com.infolion.sapss.workflow.purchase.ProcessSucessfulActionHandler"></action>
		<transition to="合同申请通过"></transition>
	</node>

	<node name="更新订单状态为不通过">
		<action class="com.infolion.sapss.workflow.purchase.ProcessFaileActionHandler"></action>
		<transition to="合同申请不通过"></transition>
	</node>

	<node name="写入SAP订单2">
		<action class="com.infolion.sapss.workflow.purchase.WriteSapOrderActionHandler"></action>
		<transition to="判断是否产生错误"></transition>
	</node>

	<decision name="判断是否产生错误">
		<handler config-type="bean" class="com.infolion.sapss.workflow.decision.WriteSapResultDecisionHandler"></handler>
		<transition to="更新订单状态为（未经领导审批）" name="生成SAP订单成功">
		</transition>
		<transition to="信息中心处理写入错误" name="产生错误">
		</transition>
	</decision>

	<node name="更新订单状态为（未经领导审批）">
		<action class="com.infolion.sapss.workflow.purchase.ProcessNoExamineActionHandler"></action>
		<transition to="审批通过（未经领导审批）"></transition>
	</node>

	<task-node name="信息中心处理写入错误">
		<task name="信息中心处理写入错误"></task>
		<transition to="更新订单状态为（未经领导审批）" name="错误解决"></transition>
	</task-node>

	<task-node name="新加坡信达安副总审核">
	     <task name="新加坡信达安副总审核"></task>
		<transition to="信达安总经理审核" name="确认提交"></transition>
		<transition to="合同信息修改" name="退回修改"></transition>
	</task-node>
    
    <decision name="关联交易判断">
        <handler config-type="bean" class="com.infolion.sapss.workflow.payment.IsRelationDecisionHandler"></handler>
		<transition to="证券事业部审核" name="关联交易"></transition>
		<transition to="财务部审核" name="非关联交易"></transition>
	</decision>

	<task-node name="证券事业部审核">
	    <task name="证券事业部审核"></task>
		<transition to="财务部审核" name="确认"></transition>
		<transition to="合同信息修改" name="退回修改"></transition>
	</task-node>

	<task-node name="财务部审核">
	    <task name="财务部审核"></task>
		<transition to="资金部审核" name="同意"></transition>
		<transition to="合同信息修改" name="退回修改"></transition>
	</task-node>

	<task-node name="资金部审核">
	    <task name="资金部审核"></task>
		<transition to="信达安贸管部审核" name="同意"></transition>
		<transition to="合同信息修改" name="退回修改"></transition>
	</task-node>

	<task-node name="信达安董事长审批">
	    <task name="信达安董事长审批"></task>
		<transition to="股份贸管报备" name="同意">
		<action config-type="bean" class="com.infolion.sapss.workflow.XinDaAnMgBbActionHandler"></action>
		</transition>
		<transition to="合同信息修改" name="退回"></transition>
	</task-node>

	<decision name="金额判断">
	    <handler config-type="bean" class="com.infolion.sapss.workflow.decision.PriceJudge3000USDDecisionHandler"></handler>
		<transition to="信达安董事长审批" name="金额大于3000万USD"></transition>
		<transition to="股份贸管报备" name="金额小于3000万USD">
		<action config-type="bean" class="com.infolion.sapss.workflow.XinDaAnMgBbActionHandler"></action>
		</transition>
	</decision>

	<task-node name="股份贸管报备">
	    <task name="股份贸管报备"></task>
		<transition to="写入SAP订单1" name="确认"></transition>
	</task-node>


	<end-state name="合同申请通过">
	</end-state>

	<end-state name="合同申请不通过"></end-state>

	<end-state name="审批通过（未经领导审批）"></end-state>


</process-definition>