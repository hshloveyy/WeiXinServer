<?xml version="1.0" encoding="UTF-8"?>

<process-definition  xmlns=""  name="contract_purcharse_modify_v2">


	<start-state name="采购合同变更申请">
		<transition to="部门经理确认" name="提交部门经理"></transition>
	</start-state>


	<task-node name="部门经理确认">
		<task name="部门经理确认"></task>
		<transition to="信息中心冻结订单" name="确认提交"></transition>
		<transition to="信息中心判断是否需要解冻订单" name="不提交"></transition>
		<transition to="信息中心修改合同,订单内容" name="直接修改SAP订单"></transition>
		<transition to="合同信息修改" name="退回修改"></transition>
	</task-node>

	<task-node name="贸管经理审核">
		<task name="贸管经理审核"></task>
		<transition to="股份副总兼外贸公司总经理审批" name="提交股份公司副总审批"></transition>
		<transition to="信息中心修改合同和订单" name="同意变更"></transition>
		<transition to="合同信息修改" name="退回业务修改"></transition>
	</task-node>

	<task-node name="财务经理审核">
		<task name="财务经理审核"></task>
		<transition to="贸易公司常务副总审核" name="同意"></transition>
		<transition to="合同信息修改" name="退回业务修改"></transition>
	</task-node>

	<task-node name="股份副总兼外贸公司总经理审批">
		<task name="股份副总兼外贸公司总经理审批"></task>
		<transition to="股份公司常务副总审批" name="通过"></transition>
		<transition to="贸管经理审核" name="退回贸管经理审核"></transition>
		<transition to="信息中心判断是否需要解冻订单" name="不同意变更"></transition>
	</task-node>

	<task-node name="股份公司常务副总审批">
		<task name="股份公司常务副总审批"></task>
		<transition to="金额判断2" name="同意变更"></transition>
		<transition to="贸管经理审核" name="退回贸管审核"></transition>
		<transition to="信息中心判断是否需要解冻订单" name="不同意变更"></transition>
	</task-node>

	<task-node name="股份公司总经理审批">
		<task name="股份公司总经理审批"></task>
		<transition to="金额判断3" name="同意变更"></transition>
		<transition to="贸管经理审核" name="退回贸管审核"></transition>
		<transition to="信息中心判断是否需要解冻订单" name="不同意变更"></transition>
	</task-node>

	<task-node name="股份公司董事长审批">
		<task name="股份公司董事长审批"></task>
		<transition to="信息中心修改合同和订单" name="同意变更"></transition>
		<transition to="贸管经理审核" name="退回贸管审核"></transition>
		<transition to="信息中心判断是否需要解冻订单" name="不同意变更"></transition>
	</task-node>

	<task-node name="合同信息修改">
		<task name="合同信息修改"></task>
		<transition to="部门经理确认" name="提交部门经理"></transition>
	</task-node>

	<decision name="金额判断2">
		<handler config-type="bean" class="com.infolion.sapss.workflow.decision.Price2JudgeDecisionHandler"></handler>
		<transition to="股份公司总经理审批" name="金额大于100万美金或700万人民币">
		</transition>
		<transition to="信息中心修改合同和订单" name="金额小于100万美金或700万人民币">
		</transition>
	</decision>

	<decision name="金额判断3">
		<handler config-type="bean" class="com.infolion.sapss.workflow.decision.Price3JudgeDecisionHandler"></handler>
		<transition to="股份公司董事长审批" name="金额大于200万美金或1400万人民币">
		</transition>
		<transition to="信息中心修改合同和订单" name="金额小于200万美金或1400万人民币">
		</transition>
	</decision>

	<node name="更新订单状态">
		<action class="com.infolion.sapss.workflow.purchase.ProcessChangeSucessfulActionHandler"></action>
		<transition to="合同变更申请通过"></transition>
	</node>

	<node name="更新订单状态为不通过">
		<action class="com.infolion.sapss.workflow.purchase.ProcessChangeFailureActionHandler"></action>
		<transition to="合同变更申请不通过"></transition>
	</node>

	<task-node name="外贸公司总顾问审批">
		<task name="外贸公司总顾问审批"></task>
		<transition to="资金部经理审核" name="同意"></transition>
		<transition to="合同信息修改" name="退回业务修改"></transition>
	</task-node>

	<task-node name="信息中心修改合同,订单内容">
		<task name="信息中心修改合同,订单内容"></task>
		<transition to="更新订单状态3" name="修改完成"></transition>
	</task-node>

	<task-node name="信息中心冻结订单">
	    <task name="信息中心冻结订单"></task>
		<transition to="关联交易判断" name="确认订单已冻结"></transition>
	</task-node>

	<task-node name="信息中心修改合同和订单">
	    <task name="信息中心修改合同和订单"></task>
		<transition to="更新订单状态" name="确认执行相关操作"></transition>
	</task-node>

	<task-node name="信息中心判断是否需要解冻订单">
	    <task name="信息中心判断是否需要解冻订单"></task>
		<transition to="更新订单状态为不通过" name="已执行相关操作"></transition>
	</task-node>

	<node name="更新订单状态3">
	    <action class="com.infolion.sapss.workflow.purchase.ProcessChangeNoExamineActionHandler"></action>
		<transition to="变更审批通过（未经领导审批）"></transition>
	</node>

	<task-node name="贸易公司常务副总审核">
	    <task name="贸易公司常务副总审核"></task>
		<transition to="外贸公司总顾问审批" name="同意"></transition>
		<transition to="合同信息修改" name="退回修改"></transition>
	</task-node>

    <decision name="关联交易判断">
        <handler config-type="bean" class="com.infolion.sapss.workflow.payment.IsRelationDecisionHandler"></handler>
		<transition to="证券事业部审核" name="关联交易"></transition>
		<transition to="财务经理审核" name="非关联交易"></transition>
	</decision>

	<task-node name="证券事业部审核">
	    <task name="证券事业部审核"></task>
		<transition to="财务经理审核" name="确认"></transition>
		<transition to="合同信息修改" name="退回修改"></transition>
	</task-node>

	<task-node name="资金部经理审核">
	    <task name="资金部经理审核"></task>
		<transition to="贸管经理审核" name="同意"></transition>
		<transition to="合同信息修改" name="退回修改"></transition>
	</task-node>


	<end-state name="合同变更申请通过">
	</end-state>

	<end-state name="合同变更申请不通过"></end-state>

	<end-state name="变更审批通过（未经领导审批）"></end-state>


</process-definition>