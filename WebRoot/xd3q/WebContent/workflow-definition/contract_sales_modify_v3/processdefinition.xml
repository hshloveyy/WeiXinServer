<?xml version="1.0" encoding="UTF-8"?>

<process-definition  xmlns=""  name="contract_sales_modify_v3">


	<start-state name="合同变更申请">
		<transition to="部门确认" name="提交部门经理"></transition>
	</start-state>


	<task-node name="部门确认">
		<task name="部门确认"></task>
		<transition to="关联交易判断" name="确认提交"></transition>
		<transition to="信息中心修改订单和合同信息" name="直接修改SAP订单"></transition>
		<transition to="修改变更描述" name="退回修改"></transition>
	</task-node>

	<task-node name="信达安总经理审核">
		<task name="信达安总经理审核"></task>
		<transition to="金额判断" name="同意变更"></transition>
		<transition to="修改变更描述" name="退回业务"></transition>
	</task-node>

	<task-node name="修改变更描述">
		<task name="修改变更描述"></task>
		<transition to="部门确认" name="提交部门经理"></transition>
		<transition to="更新订单状态2" name="不提交"></transition>
	</task-node>

	<task-node name="信息中心修改订单和合同信息">
		<task name="信息中心修改订单和合同信息"></task>
		<transition to="更新订单状态3" name="确认已修改完成"></transition>
	</task-node>

	<node name="更新订单状态1">
		<action class="com.infolion.sapss.workflow.sales.ProcessChangeSucessfulActionHandler"></action>
		<transition to="合同变更申请通过"></transition>
	</node>

	<node name="更新订单状态2">
		<action class="com.infolion.sapss.workflow.sales.ProcessChangeFailureActionHandler"></action>
		<transition to="合同变更申请不通过"></transition>
	</node>

	<node name="更新订单状态3">
		<action class="com.infolion.sapss.workflow.sales.ProcessChangeNoExamineActionHandler"></action>
		<transition to="合同变更申请通过（未经领导审批）"></transition>
	</node>

	
	<task-node name="信达安贸管部审核">
	    <task name="信达安贸管部审核"></task>
	    <transition to="股份贸管补录确认" name="非自有业务"></transition>
		<transition to="信达安总经理审核" name="自有业务"></transition>
	</task-node>

	<task-node name="信息中心修改订单和合同信息1">
	    <task name="信息中心修改订单和合同信息1"></task>
		<transition to="更新订单状态1" name="确认执行相关操作"></transition>
	</task-node>

	<task-node name="股份贸管补录确认">
	    <task name="股份贸管补录确认"></task>
		<transition to="信息中心修改订单和合同信息1" name="同意变更"></transition>
		<transition to="修改变更描述" name="退回修改"></transition>
	</task-node>
    <decision name="关联交易判断">
        <handler config-type="bean" class="com.infolion.sapss.workflow.payment.IsRelationDecisionHandler"></handler>
		<transition to="证券事业部审核" name="关联交易"></transition>
		<transition to="财务部审核" name="非关联交易"></transition>
	</decision>

	<task-node name="证券事业部审核">
	    <task name="证券事业部审核"></task>
		<transition to="财务部审核" name="确认"></transition>
		<transition to="修改变更描述" name="退回修改"></transition>
	</task-node>

	<task-node name="财务部审核">
	    <task name="财务部审核"></task>
		<transition to="资金部审核" name="同意"></transition>
		<transition to="修改变更描述" name="退回"></transition>
	</task-node>

	<task-node name="资金部审核">
	    <task name="资金部审核"></task>
		<transition to="信达安贸管部审核" name="同意"></transition>
		<transition to="修改变更描述" name="退回"></transition>
	</task-node>

	<task-node name="信达安董事长审批">
	    <task name="信达安董事长审批"></task>
		<transition to="股份贸管报备" name="同意">
		<action config-type="bean" class="com.infolion.sapss.workflow.XinDaAnMgBbActionHandler"></action>
		</transition>
		<transition to="修改变更描述" name="退回"></transition>
	</task-node>

	<decision name="金额判断">
	    <handler config-type="bean" class="com.infolion.sapss.workflow.decision.PriceJudge3000USDDecisionHandler"></handler>
		<transition to="信达安董事长审批" name="金额大于3000万USD"></transition>
		<transition to="股份贸管报备" name="金额小于3000万USD">
		<action config-type="bean" class="com.infolion.sapss.workflow.XinDaAnMgBbActionHandler"></action>
		</transition>
	</decision>

	<task-node name="股份贸管报备">
	    <task name="股份贸管报备"></task>
		<transition to="信息中心修改订单和合同信息1" name="确认"></transition>
	</task-node>


	<end-state name="合同变更申请通过"></end-state>

	<end-state name="合同变更申请不通过"></end-state>

	<end-state name="合同变更申请通过（未经领导审批）"></end-state>


</process-definition>