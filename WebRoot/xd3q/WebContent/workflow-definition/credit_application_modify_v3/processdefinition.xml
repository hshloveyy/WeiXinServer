<?xml version="1.0" encoding="UTF-8"?>

<process-definition  xmlns=""  name="credit_application_modify_v3">


	<start-state name="信用证变更申请">
		<transition to="部门确认" name="提交部门经理"></transition>
	</start-state>


	<task-node name="修改填写开证申请表及预保">
	    <task name="修改填写开证申请表及预保"></task>
		<transition to="部门确认" name="提交部门经理"></transition>
		<transition to="更新信用证状态为改证申请不通过" name="作废申请"></transition>
	</task-node>

	<task-node name="信达安贸管部审核">
	    <task name="信达安贸管部审核"></task>
	    <transition to="贸管审单员审核" name="非自有业务"></transition>
		<transition to="信达安总经理审批" name="自有业务"></transition>
		<transition to="修改填写开证申请表及预保" name="退回修改"></transition>
	</task-node>

	<task-node name="信达安总经理审批">
	    <task name="信达安总经理审批"></task>
		<transition to="金额判断" name="同意改证"></transition>
		<transition to="修改填写开证申请表及预保" name="退回修改"></transition>
	</task-node>

	<task-node name="部门确认">
	    <task name="部门确认"></task>
		<transition to="财务部审核" name="确认提交"></transition>
		<transition to="修改填写开证申请表及预保" name="退回修改"></transition>
	</task-node>

	<node name="更新信用证状态为改证申请不通过">
		<action class="com.infolion.sapss.workflow.credit.CreditEntryHisProcessFaileActionHandler" config-type="bean"></action>
		<transition to="信用证变更不通过"></transition>
	</node>

	<node name="更新信用证状态为改证通过">                    
		<action class="com.infolion.sapss.workflow.credit.CreditEntryHisProcessSucessfulActionHandler" config-type="bean"></action>
		<transition to="信用证变更通过"></transition>
	</node>

	<task-node name="贸管审单员审核">
	    <task name="贸管审单员审核"></task>
		<transition to="更新信用证状态为改证通过" name="确认"></transition>
		<transition to="修改填写开证申请表及预保" name="退回修改"></transition>
	</task-node>

	<task-node name="财务部审核">
	    <task name="财务部审核"></task>
		<transition to="资金部审核" name="同意"></transition>
		<transition to="修改填写开证申请表及预保" name="退回"></transition>
	</task-node>

	<task-node name="资金部审核">
	    <task name="资金部审核"></task>
		<transition to="信达安贸管部审核" name="同意"></transition>
		<transition to="修改填写开证申请表及预保" name="退回"></transition>
	</task-node>

	<decision name="金额判断">
	    <handler config-type="bean" class="com.infolion.sapss.workflow.decision.PriceJudge3000USDDecisionHandler"></handler>
		<transition to="信达安董事长审批" name="金额大于3000万USD"></transition>
		<transition to="贸管审单员审核" name="金额小于3000万USD">
		<action config-type="bean" class="com.infolion.sapss.workflow.XinDaAnMgBbActionHandler"></action>
		</transition>
	</decision>

	<task-node name="信达安董事长审批">
	    <task name="信达安董事长审批"></task>
		<transition to="贸管审单员审核" name="同意">
		<action config-type="bean" class="com.infolion.sapss.workflow.XinDaAnMgBbActionHandler"></action>
		</transition>
		<transition to="修改填写开证申请表及预保" name="退回"></transition>
	</task-node>


	<end-state name="信用证变更不通过"></end-state>

	<end-state name="信用证变更通过"></end-state>

</process-definition>